@using System.Data.Entity.Infrastructure.Design
@model PetShop.Models.Food
@{
    ViewBag.Title = "Edit";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm(actionName: "Edit", controllerName: "Food", method: FormMethod.Post))

{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <!--camp ascuns pentru a retine id-ul obiectului-->
    @Html.HiddenFor(b => b.Id)

    <br />
    @Html.Label("Product name", "Product name: ")
    <br />
    @Html.EditorFor(b => b.ProductName, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.ProductName, "", new { @class = "text-danger" })

    <br />
    @Html.Label("Diet?", "Diet? ")

    <br />
    @Html.CheckBoxFor(b => b.Diet, true)
    @Html.ValidationMessageFor(b => b.Diet, "", new { @class = "text-danger" })
    <br />
    <button class="btn btn-primary" type="submit">Update</button>
}