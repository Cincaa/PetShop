@using System.Data.Entity.Infrastructure.Design
@model PetShop.Models.Hamster
@{
    ViewBag.Title = "Edit";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm(actionName: "Edit", controllerName: "Hamsters"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <!--camp ascuns pentru a retine id-ul obiectului-->
    @Html.HiddenFor(b => b.Id)
    <br />
    @Html.Label("Breed", "Breed: ")
    <br />
    @Html.EditorFor(b => b.Breed, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Breed, "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("CageSize", "Cage size: ")
    <br />
    @Html.DropDownList("CageSize", new SelectList(new List<string>() { "Small", "Medium", "Large" }), "", new { placeholder = "Type in the hamster's cage size", @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Cage.Size, "", new { @class = "text-danger" })
    <br />
    @Html.Label("CageColor", "Cage color: ")
    <br />
    @Html.DropDownList("CageColor", new SelectList(new List<string>() { "Red", "Green", "Yellow", "Black", "White", "Orange", "Blue" }, "Color"), "", new { placeholder = "Type in the hamster's cage size", @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Cage.Color, "", new { @class = "text-danger" })
    <br />
    <br />
    <button class="btn btn-primary" type="submit">Update</button>
}

