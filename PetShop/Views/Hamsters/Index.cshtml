@using PetShop.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Hamsters</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        /* Remove the navbar's default rounded borders and increase the bottom margin */
        .navbar {
            margin-bottom: 50px;
            border-radius: 0;
        }

        /* Remove the jumbotron's default bottom margin */

        .jumbotron {
            margin-bottom: 0;
        }

        /* Add a gray background color and some padding to the footer */

        footer {
            background-color: #f2f2f2;
            padding: 25px;
        }
    </style>
</head>

<body>



    <br />
    <div class="container">
        <div class="row">

            @foreach (var hamster in ViewBag.Hamsters)
            {
                
                var base64 = Convert.ToBase64String(hamster.Image);
                var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                <div class="col-sm-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading"> @hamster.Breed.Name</div>
                        <div class="panel-body">
                            <img src='@imgsrc' class="img-responsive" style="width: 100%; height: 250px;" alt="Image">
                        </div>
                        <div class="panel-footer">
                            <a class="btn btn-primary btn-lg btn-block" href="@Url.Action("Details", "Hamsters", new {id = hamster.Id})" role="button">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <br>


<div style="position: absolute; right: 20px; top: 65px;">
    
    <input type="button" class="btn btn-primary" value="Add a new hamster" onclick="location.href = '@Url.Action("New", "Hamsters")'"/>
    @foreach (var hamster in ViewBag.Hamsters)
    {
        if (ViewBag.Hamsters.Count == 1)
        {
            <input type="button" class="btn btn-primary" value="Edit hamster" onclick="location.href = '@Url.Action("Edit", "Hamsters", new {id = hamster.Id})'"/>
        }
    }
    <br/>
</div>

    <footer class="container-fluid text-center">
        <p>Online Store Copyright</p>
        <form class="form-inline">
            Get deals:
            <input type="email" class="form-control" size="50" placeholder="Email Address">
            <button type="button" class="btn btn-danger">Sign Up</button>
        </form>
    </footer>

</body>
</html>