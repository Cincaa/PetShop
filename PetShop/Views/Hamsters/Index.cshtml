@using PetShop.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Hamsters</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        
        .navbar {
            margin-bottom: 50px;
            border-radius: 0;
        }

        .jumbotron {
            margin-bottom: 0;
        }


        footer {
            background-color: #f2f2f2;
            padding: 25px;
        }

        
    </style>
</head>

<body>



    <br />
    <div class="container">
        <div class="row">

            @foreach (var hamster in ViewBag.Hamsters)
            {

                var base64 = Convert.ToBase64String(hamster.Image);
                var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                <div class="col-sm-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading " style="background-color: #1abc9c;"> @hamster.Breed.Name</div>
                        <div class="panel-body">
                            <img src='@imgsrc' class="img-responsive" style="width: 100%; height: 250px;" alt="Image">
                        </div>
                        <div class="panel-footer">
                            <a class="btn btn-primary btn-lg btn-block" href="@Url.Action("Details", "Hamsters", new {id = hamster.Id})" role="button">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <br>


<div style="position: absolute; right: 1px; top: 65px;">
    
    <input type="button" class="btn btn-primary" value="Add a new hamster" style=" max-width: 150px;"onclick="location.href = '@Url.Action("New", "Hamsters")'"/>
    @foreach (var hamster in ViewBag.Hamsters)
    {
        if (ViewBag.Hamsters.Count == 1)
        {
            <input type="button" class="btn btn-primary" value="Edit hamster" onclick="location.href = '@Url.Action("Edit", "Hamsters", new {id = hamster.Id})'"/>
            <input type="button" class="btn btn-primary" value="Delete hamster" onclick="location.href = '@Url.Action("Delete", "Hamsters", new {id = hamster.Id})'"/>
        }
    }
    <br/>
</div>
</body>
</html>