
@{
    ViewBag.Title = "New";
}


@model PetShop.Models.Hamster


@using (Html.BeginForm(actionName: "New", controllerName: "Hamsters", method: FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
{
    <br />
    @Html.Label("Breed: ")
    <br />
    @Html.TextBoxFor(b => b.Breed.Name, null, new { placeholder = "Type in the hamster's breed name", @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Breed.Name, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Size: ")
    <br />
    @Html.DropDownListFor(b => b.Breed.Size, new SelectList(Model.BreedSizeList, "Value", "Text"), "Choose breed size", new { @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Breed.Size, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Color: ")
    <br />
    @Html.DropDownListFor(b => b.Breed.Color, new SelectList(Model.BreedColorList, "Value", "Text"), "Choose breed color", new { @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Breed.Color, "", new { @class = "text-danger" })
    <br />

