
@{
    ViewBag.Title = "Location";
}


<body>
<br />

<table class="table table-striped table-dark ">
    <thead>
        <tr>
            <th scope="col">#Id</th>
            <th scope="col">Location type</th>
            <th scope="col">City</th>
            <th scope="col">Street</th>
            <th scope="col">Number</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var location in ViewBag.Locations)
    {
        <tr>
            <th scope="row">@location.Id</th>
            <td>@location.LocationType</td>
            <td>@location.Address.City</td>
            <td>@location.Address.Street</td>
            <td>@location.Address.Number</td>


            <td>
                <div class="d-flex flex-row-reverse">

                    <div class="p-2">
                         <a class="stretched-link" href="@Url.Action("Details", "Locations", new {id = location.Id})" role="button"> Details</a> 
                    </div>

                    <div class="p-2">
                        <a class="stretched-link" onclick="location.href = '@Url.Action("New", "Locations")'" role="button"> Add a new location </a>
                    </div>
                    <div class="p-2">
                        <a class="stretched-link" href="@Url.Action("Edit", "Locations", new {id = location.Id})" role="button"> Edit location </a>
                    </div>
                    <div class="p-2">
                        <a class="stretched-link" href="@Url.Action("Delete", "Food", new {id = location.Id})" role="button"> Delete location </a>
                    </div>
                </div>
            </td>

        </tr>
    }
    </tbody>
</table>

</body>